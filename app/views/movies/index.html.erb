<h2>All Movies</h2>

<%#  Part 2: Start here... %>
<%= form_tag movies_path, :method => :get, :id => 'ratings_form' do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <%= rating %>
    <%= check_box_tag "ratings[#{rating}]" %>
  <% end %>
  <%= submit_tag 'Refresh', :class => 'btn btn-primary' , :id => 'ratings_submit' %>
<% end %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <!--<th>Movie Title</th>-->
      <th class =<%= @table_title%> class =<%= @table_title%>><%= link_to "Movie Title", movies_path(:sort_by => "title"), id: "title_header"%></th>
      <th>Rating</th>
      <!--<th>Release Date</th>-->
      <th class=<%= @table_date%> class =<%= @table_date%>><%= link_to "Release Date", movies_path(:sort_by => "release_date"), id: "release_date_header", class: @yellow_a%></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>